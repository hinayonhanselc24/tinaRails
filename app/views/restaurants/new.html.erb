<h2>Create a new Restaurant</h2>
<%= form_with(model: @restaurant, url: restaurants_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  
  <!-- Add more fields here if needed -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
